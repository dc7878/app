<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout_live_cate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.cc.dc.common.custom.LoadMoreRecyclerView
            android:id="@+id/recycler_view_live_cate"
            android:background="#ffff00"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.cc.dc.common.custom.LoadMoreRecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:id="@+id/layout_game_cate"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_game_list"
            android:background="#ff00ff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <TextView
            android:id="@+id/btn_change"
            android:text="show/hide"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>
</FrameLayout>