<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btnGetUserETH"
        android:text="获取资产明细(ETH)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnGetUserUSDT"
        android:text="获取资产明细(USDT)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvETH"
        android:text="ETH"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvUSDT"
        android:text="USDT"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvStatus"
        android:text="当前状态"
        android:padding="@dimen/normal_5"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvCount1"
            android:text="0.02/次"
            android:padding="@dimen/normal_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCount2"
            android:text="0.002/次"
            android:padding="@dimen/normal_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCount3"
            android:text="0.0002/次"
            android:padding="@dimen/normal_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvCount"
        android:textColor="@color/red"
        android:padding="@dimen/normal_5"
        android:text="每次交易数量: 0.0002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/startBuyTrade"
        android:text="开始买单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/startSellTrade"
        android:text="开始卖单"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/stopTrade"
        android:text="停止交易"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>