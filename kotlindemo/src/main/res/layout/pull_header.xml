<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textSize="16sp"
            android:id="@+id/header_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="下拉刷新"/>
        <ImageView
            android:id="@+id/header_progressbar"
            android:background="@drawable/progress_loading"
            android:layout_toLeftOf="@+id/header_text"
            android:layout_marginRight="@dimen/normal_5"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/header_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/header_text"
            android:layout_toStartOf="@+id/header_text"
            android:src="@mipmap/ic_action_arrow_bottom"/>
    </RelativeLayout>
</LinearLayout>